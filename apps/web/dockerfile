FROM node:20-alpine AS base
RUN npm install --global corepack@latest
RUN corepack enable pnpm
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Stage 1: Prune the monorepo
FROM base AS builder
COPY . .
# Prune for the specific app (e.g., 'web')
RUN npx turbo prune @todo/web --docker

# Stage 2: Install dependencies
FROM base AS installer

# First, copy the pruned package.json files to install dependencies
COPY --from=builder /app/out/json/ .
COPY --from=builder /app/out/pnpm-lock.yaml ./pnpm-lock.yaml
RUN pnpm install

# Stage 3: Build the project
COPY --from=builder /app/out/full/ .
COPY turbo.json turbo.json
# Build the project using turbo
RUN npx turbo run build --filter=@todo/web

# Stage 4: Runner Stage: Serve the static files using Nginx
FROM nginx:alpine AS runner
WORKDIR /usr/share/nginx/html

# Clean the default nginx public folder
RUN rm -rf ./*

# Copy the build output from the build-stage
# Vite usually outputs to 'dist' inside the app folder
COPY --from=installer /app/apps/web/dist .

# (Optional) Copy a custom nginx config if you have client-side routing (React Router)
COPY ./apps/web/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
